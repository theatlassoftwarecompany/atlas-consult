{
  "family": "atlas-consult-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::879986119914:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::879986119914:role/atlas-consult-task-role",
  "containerDefinitions": [
    {
      "name": "atlas-consult",
      "image": "879986119914.dkr.ecr.eu-west-2.amazonaws.com/atlas-consult:latest",
      "essential": true,
      "environment": [
        {
          "name": "AWS_REGION",
          "value": "eu-west-2"
        },
        {
          "name": "S3_BUCKET_NAME",
          "value": "atlas-consult-contact-submissions"
        }
      ],
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/atlas-consult",
          "awslogs-region": "eu-west-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "node -e \"require('http').get('http://localhost:3000/', (r) => process.exit(r.statusCode === 200 ? 0 : 1)).on('error', () => process.exit(1))\""],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
